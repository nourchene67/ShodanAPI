<h1>login</h1>

<%= form_with url: login_path do |form| %>

    <div class="mb-3">
        <%= form.label :username %>
        <%= form.text_field :username, class: "form-control" , placeholder: "admin" %>
    </div>
    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: "password" %>
    </div>
    <div class="mb-3">
        <%= form.submit "login" %>
    </div>
<% end %>   